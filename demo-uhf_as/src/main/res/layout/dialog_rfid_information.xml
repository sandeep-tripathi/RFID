<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/xrayImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical">

   <!-- <ImageView
        android:id="@+id/logo"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:layout_gravity="right"
        android:src="@drawable/ovgu" />
-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:src="@android:drawable/checkbox_on_background"
        android:text="RFID Information System"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:src="@drawable/ovgu" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="12dp"
        android:text="Current Date"
        android:textSize="19sp"/>

    <EditText
        android:id="@+id/currentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Current date"
        android:paddingLeft="17dp"
        android:text=" currentDate"
        android:textColor="@color/red1"
        android:textIsSelectable="true"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:textColor="@color/red1"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="12dp"
        android:text="Tag ID"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tagID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:fontFamily="sans-serif"
        android:hint="Tag ID"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/red1"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="12dp"
        android:text="Choose status of Equipment"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_up"
        android:entries="@array/equipment_status_arrays"
        android:paddingLeft="17dp"
        android:paddingTop="17dp"
        android:prompt="@string/equipment_status_prompt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="21dp"
        android:text="Next Inspection Date"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:paddingLeft="17dp"
        android:paddingTop="17dp"
        android:text="15/12/2018"
        android:textColor="@color/red1"
        android:textIsSelectable="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:padding="17dp"
            android:text="Remarks: "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="3dp"
            android:ems="10"
            android:inputType="textPersonName" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/button_bg" />



</LinearLayout>