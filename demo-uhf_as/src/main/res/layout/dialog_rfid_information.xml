<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/xrayImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical">

    <!-- <ImageView
         android:id="@+id/logo"
         android:layout_width="38dp"
         android:layout_height="31dp"
         android:layout_gravity="right"
         android:src="@drawable/ovgu" />
 -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        android:src="@android:drawable/checkbox_on_background"
        android:text="RFID Information System"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:src="@drawable/ovgu" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:" />

        <EditText
            android:id="@+id/currentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Current date"
            android:paddingLeft="17dp"
            android:text=" Today"
            android:textColor="@color/red1"
            android:textIsSelectable="true"
            android:textSize="18sp" />
        android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User:" />


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Enter Username"
            android:inputType="textEmailAddress"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:textColor="@color/red1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag ID:" />


        <EditText
            android:id="@+id/tagID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:fontFamily="sans-serif"
            android:hint="Tag ID"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/red1"
            android:textIsSelectable="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label:" />

        <EditText
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Enter label"
            android:inputType="textEmailAddress"
            android:paddingLeft="17dp"
            android:paddingTop="5dp"
            android:textColor="@color/red1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status of Equipment:" />

        <Spinner
            android:id="@+id/equipment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/equipment_status_arrays"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:prompt="@string/equipment_status_prompt" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Inspection:" />

        <EditText
            android:id="@+id/next_inspection_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:text="15/12/2018"
            android:textColor="@color/red1"
            android:textIsSelectable="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remarks:" />

        <EditText

            android:id="@+id/remarks"
            android:layout_width="332dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="3dp"
            android:ems="10"
            android:hint="Enter your remarks"
            android:inputType="textPersonName" />
    </LinearLayout>



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/crackapron" />



</LinearLayout>